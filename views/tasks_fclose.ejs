<%- include lib/apicalh01 %>
    <style type="text/css">
        input,
        textarea,
        select {
            margin: 5px 0 5px 0;
        }
        
        textarea {
            width: 100% !important;
        }
        
        
        .element {
            position: relative;
            top: 50%;
            transform: translateY(-10%);
        }
    </style>
    <script>
        var taskid = "";
        var taskids = [];
        var screenfields = [];
    </script>

    <body>
        <!-- begin #page-loader -->
        <div id="page-loader" class="fade in"><span class="spinner"></span></div>
        <!-- end #page-loader -->

        <!-- begin #page-container -->
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <!-- begin #header -->
            <%- include lib/apicalh02 %>
                <!-- end #sidebar -->

                <!-- begin #content -->
                <div id="content" class="content">

                    <div class="row">

                        <!-- end col-2 -->
                        <!-- begin col-10 -->
                        <div class="col-md-12">
                            <div class="panel panel-inverse">
                                <div class="panel-heading">
                                    <div class="panel-heading-btn element">
                                       <a href="javascript:createdialog();" class="btn btn-success btn-icon btn-circle" data-toggle="modal"><i class="fa fa-check fa-1x" ></i></a>

                                    </div>
                                    <h4 class="panel-title">Task Management</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="col-md-12">
                                    </div>
                                    <table id="data-table" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <input name="select_all" value="1" type="checkbox">
                                                </th>
                                                <th>Project Name</th>
                                                <th>Task Name</th>
                                                <th>Task Description</th>
                                                <th>Assign To</th>
                                                <th>Estimated Hours</th>
                                                <th>Due date</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% 
                                                    taskmgmt.forEach (function(mgmt){               
                                                %>
                                                <tr id="<%= mgmt.tasksrno %>">
                                                    <td>
                                                        <input type="checkbox" onclick='event.stopPropagation();' name="<%= mgmt.tasksrno %>" id="<%= mgmt.tasksrno %>" />
                                                    </td>
                                                    <td>
                                                        <%= mgmt.projectname %>
                                                    </td>

                                                    <td>
                                                        <%= mgmt.taskname %>
                                                    </td>
                                                    <td>
                                                        <%= mgmt.taskDescription %>
                                                    </td>
                                                    <td>
                                                        <%= mgmt.assignto %>
                                                    </td>
                                                    <td>
                                                        <%= mgmt.estimatehr %>
                                                    </td>
                                                    <td>
                                                        <%= mgmt.due_date %>
                                                    </td>
                                                    <td>
                                                        <%= mgmt.taskstatus %>
                                                    </td>
                                                </tr>
                                                <% }); %>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- end col-10 -->
                    </div>
                    <!-- end row -->
                    
                     <div class="modal fade" id="modal-dialog">
                        <div class="modal-dialog ">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                    <h4 class="modal-title">Close task/s</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <form action="/" method="post" id="form" data-parsley-validate="true">
                                            <!-- begin col-6 -->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">Status</label>
                                                    <div class="col-md-8">
                                                        <select class="form-control selectpicker" data-size="10" data-live-search="true" data-style="btn-white" name="status" required="">
                                                            <option value="7" selected>Force Closed</option>
                                                        </select>
                                                    </div>
                                                    <label class="col-md-4 control-label ">Remark*</label>
                                                    <div class="col-md-8">
                                                        <textarea class="form-control" placeholder="Remark" name="remark" rows="3" required></textarea>
                                                    </div>
                                                </div>

                                            </div>
                                            <!-- end col-6 -->
                                        </form>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <a href="javascript:;" class="btn btn-sm btn-white" data-dismiss="modal">Close</a>
                                    <a href="javascript:forceclosetasks();" class="btn btn-sm btn-success">Done</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end #content -->

                <!-- begin theme-panel -->

                <!-- end theme-panel -->

                <!-- begin scroll to top btn -->
                <a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"><i class="fa fa-angle-up"></i></a>
                <!-- end scroll to top btn -->
        </div>
        <!-- end page container -->

        <!-- ================== BEGIN BASE JS ================== -->
        <%- include lib/apicalf02 %>
            <!-- ================== END BASE JS ================== -->

            <script>
                $(document).ready(function() {
                    App.init();
                });
                var table = $('#data-table').DataTable({
                    //                    dom: 'lBfrtip',
                    //                        buttons: [
                    //                                { extend: 'copy', className: 'btn-sm' },
                    //                                { extend: 'csv', className: 'btn-sm' },
                    //                                { extend: 'excel', className: 'btn-sm' },
                    //                                { extend: 'pdf', className: 'btn-sm' },
                    //                                { extend: 'print', className: 'btn-sm' }
                    //                        ],
                    responsive: true
                });

                var dataTable = document.getElementById('data-table');
                var checkItAll = dataTable.querySelector('input[name="select_all"]');
                var inputs = dataTable.querySelectorAll('tbody>tr>td>input');

                checkItAll.addEventListener('change', function() {
                    if (checkItAll.checked) {
                        inputs.forEach(function(input) {
                            input.checked = true;
                        });
                    } else {
                        inputs.forEach(function(input) {
                            input.checked = false;
                        });
                    }
                });

                
                function createdialog() {
                    taskids = [];
                    inputs.forEach(function(input) {
                        if (input.checked) {
                            taskids.push (input.id);
                        }
                    });
                    if (taskids && taskids.length > 0) {
//                        alert("selected tasks : " + taskids);
                        $('#modal-dialog').modal('show');
                    } else {
                        alert("Please select atleast a project...");
                    }
                };
                $('#modal-dialog').on('hidden.bs.modal', function() {
                    $(this).find("input,textarea,select").val('').end();
                    $('#form').parsley().destroy();
                    $('#form').validate().resetForm();
                });

                function forceclosetasks() {
                    var form = $('#form');
                    form.parsley().validate();
                    screenfields = [];
                    if (form.parsley().isValid()) {
                        var formdata = $('#form').serializeArray();
                        var data = formdata.reduce(function(a, x) {
                            a[x.name] = x.value;
                            return a;
                        }, {});
                        screenfields.push(data);
                        $.ajax({
                            type: "POST",
                            url: "/updatefclosetasks",
                            timeout: 6000,
                            contentType: 'application/json',
                            data: JSON.stringify({
                                taskids: taskids.join(),
                                formdata: JSON.stringify(screenfields)
                            }),
                            success: function(data) {
                                var fdata = JSON.parse(JSON.stringify(data));
                                if (fdata.status == '0') {
                                    taskids = [];
                                    alert("Data saved successfully");
                                    $('#modal-dialog').modal('hide');
                                    location.reload();
                                } else {
                                    alert(fdata.status_msg);
                                    taskids = [];
                                }
                            },
                            error: function(xhr, status, error) {
                                /* alert(status+" "+error.Message+" "+xhr.responseText); */
                            }
                        });
                    }

                };
            </script>
    </body>

</html>