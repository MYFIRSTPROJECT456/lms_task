                            <h4 class="panel-title">ADHOC Task Creation</h4>
                        </div>
                        <div class="panel-body">
                            <form action="/" method="POST" id="formf" data-parsley-validate="true">
                                <div id="wizard">
                                    <div>
                                        <fieldset>
                                            <!-- begin row -->
